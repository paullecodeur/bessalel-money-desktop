{
  "appId": "net.bessalel.money",
  "productName": "Bessalel Money",
  "directories": {
    "output": "app-builds"
  },
  "nsis": {
    "oneClick": false,
    "perMachine":true,
    "installerLanguages": "fr_FR",
    "displayLanguageSelector": true,
    "allowToChangeInstallationDirectory": false,
    "multiLanguageInstaller": true,
    "unicode": true
  },
  "files": [
    "**/*",
    "!*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!e2e/",
    "!hooks/",
    "!.angular-cli.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "extraResources": [
    {
      "from": "src/angularbuild/assets/favicon",
      "to": "../src/angularbuild/assets/favicon"
    }
  ],
  "win": {
    "icon": "src/angularbuild/assets/favicon",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "paullecodeur",
      "repo": "bessalel-money-desktop"
    }
  },
  "mac": {
    "icon": "src",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "src",
    "target": [
      "AppImage"
    ]
  }
}
